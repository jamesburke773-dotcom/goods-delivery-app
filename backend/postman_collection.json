{
  "info": {
    "name": "Goods Delivery API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"Alice\", \"email\": \"alice@example.com\", \"password\": \"password123\", \"role\": \"customer\"}"
        },
        "url": {
          "raw": "http://localhost:3000/api/auth/signup",
          "host": [
            "http://localhost:3000"
          ],
          "path": [
            "api",
            "auth",
            "signup"
          ]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"alice@example.com\", \"password\": \"password123\"}"
        },
        "url": {
          "raw": "http://localhost:3000/api/auth/login",
          "host": [
            "http://localhost:3000"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      }
    },
    {
      "name": "Create Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"pickup_address\": \"10 Main St\", \"dropoff_address\": \"20 Oak Ave\", \"price_cents\": 1500}"
        },
        "url": {
          "raw": "http://localhost:3000/api/orders",
          "host": [
            "http://localhost:3000"
          ],
          "path": [
            "api",
            "orders"
          ]
        }
      }
    }
  ]
}